{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "build",
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "rootDir": "./.debug",
    "baseUrl": ".",
    "paths": {
      "@/*": [".debug/*"]
    }
  },
  "include": [".debug/**/*"],
  "exclude": ["node_modules", "lib", "es"]
}
